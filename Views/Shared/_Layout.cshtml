        .search-popup {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            z-index: 9999;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }

            .search-popup.active {
                opacity: 1;
                visibility: visible;
            }

        .search-popup__overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.7);
            cursor: pointer;
        }

        .search-popup__content {
            position: absolute;
            width: 100%;
            max-width: 800px;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 30px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .search-input-group {
            display: flex;
            position: relative;
        }

        #global-search {
            flex: 1;
            padding: 15px 20px;
            border: 1px solid #ddd;
            border-radius: 4px 0 0 4px;
            font-size: 16px;
            outline: none;
        }

        .search-type-selector select {
            padding: 15px;
            border: 1px solid #ddd;
            border-left: none;
            border-right: none;
            appearance: none;
            background: #f8f8f8;
            cursor: pointer;
        }

        .search-suggestions {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: #fff;
            border: 1px solid #ddd;
            border-top: none;
            border-radius: 0 0 4px 4px;
            max-height: 300px;
            overflow-y: auto;
            display: none;
            z-index: 1000;
        }

        .search-suggestion-item {
            padding: 10px 20px;
            cursor: pointer;
            transition: background 0.2s;
        }

            .search-suggestion-item:hover {
                background: #f5f5f5;
            }

        .solinom-btn--base {
