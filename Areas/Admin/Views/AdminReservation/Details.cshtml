@model FinalProject.MVC.Models.Reservation

@{
    ViewData["Title"] = "Reservation Details";
}

<h2 class="mb-4">Reservation Details</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Reservation #@Model.Id</h5>

        <dl class="row">
            <dt class="col-sm-3">Room</dt>
            <dd class="col-sm-9">@Model.Room?.Name</dd>

            <dt class="col-sm-3">User</dt>
            <dd class="col-sm-9">@Model.User?.UserName</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                <span class="badge
                    @(Model.Status == ReservationStatus.Approved ? "bg-success" :
                      Model.Status == ReservationStatus.Rejected ? "bg-danger" :
                      "bg-warning text-dark")">
                    @Model.Status
                </span>
            </dd>

            <dt class="col-sm-3">Start Date</dt>
            <dd class="col-sm-9">@Model.CheckInDate.ToString("dd MMM yyyy")</dd>

            <dt class="col-sm-3">End Date</dt>
            <dd class="col-sm-9">@Model.CheckOutDate.ToString("dd MMM yyyy")</dd>

            
        </dl>

        <a asp-action="PendingReservations" class="btn btn-secondary">Back to List</a>
    </div>
</div>
